{
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/blinkkcode/amagaki-starter.git"
  },
  "scripts": {
    "browsersync:reload": "browser-sync reload",
    "browsersync:start": "browser-sync start --proxy localhost:8080 --files dist",
    "build": "npm run build:src; amagaki build",
    "build:src": "webpack --mode development",
    "build:src:notify": "webpack --mode development --env notify",
    "dev": "npm run build:src; concurrently -k \"npm:watch:src\" \"npm:watch:pages\" \"npm:start\" \"npm:browsersync:start\"",
    "fix": "npm run fix:sass",
    "fix:sass": "sass-lint-auto-fix -c .sasslintrc.fix.yaml",
    "start": "amagaki serve",
    "watch:src": "nodemon --watch src -e js,sass --exec npm run build:src:notify",
    "watch:pages": "nodemon --watch content --watch views -e njk,yaml --exec npm run browsersync:reload"
  },
  "dependencies": {
    "@amagaki/amagaki": "^0.1.5"
  },
  "devDependencies": {
    "browser-sync": "^2.26.13",
    "concurrently": "^5.3.0",
    "file-loader": "^6.2.0",
    "glob": "^7.1.6",
    "gts": "^3.1.0",
    "nodemon": "^2.0.7",
    "sass": "^1.32.4",
    "sass-lint-auto-fix": "^0.21.2",
    "sass-loader": "^10.1.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1",
    "webpack-notifier": "^1.12.0"
  }
}
