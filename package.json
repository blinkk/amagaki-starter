{
  "scripts": {
    "browsersync:reload": "browser-sync reload",
    "browsersync:start": "browser-sync start --proxy localhost:8080 --files dist",
    "compile": "webpack --mode development",
    "dev": "concurrently -k \"npm:watch:src\" \"npm:watch:views\" \"npm:start\" \"npm:browsersync:start\"",
    "start": "amagaki serve .",
    "watch:src": "nodemon --watch src -e js,sass --exec npm run compile",
    "watch:views": "nodemon --watch views -e njk --exec npm run browsersync:reload"
  },
  "devDependencies": {
    "@amagaki/amagaki": "file:../amagaki",
    "browser-sync": "^2.26.13",
    "concurrently": "^5.3.0",
    "file-loader": "^6.2.0",
    "glob": "^7.1.6",
    "nodemon": "^2.0.7",
    "sass": "^1.32.4",
    "sass-loader": "^10.1.1",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1"
  }
}
