<!DOCTYPE html>
<html lang="{{doc.locale}}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{doc.fields.title}}</title>
    <meta name="description" value="{{doc.fields.description}}">
    <link rel="stylesheet" href="{{a.static('/dist/css/main.min.css').url.path}}">
</head>
<body>
<div class="main">
    {% set partial = doc.pod.doc('/content/partials/header.yaml').fields %}
    {% include "/views/partials/header.njk" %}
    {% if doc.fields.partials %}
        {% for partial in doc.fields.partials %}
            <div class="help">{{partial.partial}}</div>
            {% set staticFile = a.static('/dist/css/' + partial.partial + '.min.css') %}
            {% if doc.pod.fileExists(staticFile.podPath) %}
            <link rel="stylesheet" href="{{staticFile.url.path}}">
            {% endif %}
            {% include "/views/partials/" ~ partial.partial ~ ".njk" %}
        {% endfor %}
    {% else %}
        <div class="main__body">
            {{doc.body|markdown|safe}}
        </div>
    {% endif %}
    {% set partial = doc.pod.doc('/content/partials/footer.yaml').fields %}
    {% include "/views/partials/footer.njk" %}
</div>