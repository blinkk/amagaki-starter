{% macro renderPartial(partial) %}
    <div class="help">
        <u>Template:</u> {{partial.partial}}
        {% if partial.options %}
        <u>Options:</u> {{partial.options|join(', ')}}
        {% endif %}
    </div>
    {% set staticFile = a.static('/dist/css/' + partial.partial + '.min.css') %}
    {% if doc.pod.fileExists(staticFile.podPath) %}
    <link rel="stylesheet" href="{{staticFile.url.path}}">
    {% endif %}
    {% include "/views/partials/" ~ partial.partial ~ ".njk" %}
{% endmacro %}