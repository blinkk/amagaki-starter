{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist/js/",
    "pretty": true,
    "rootDir": "src/",
    "skipLibCheck": true,
    "target": "es2018",
    "lib": [
      "es2018",
      "dom"
    ],
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ],
}
